/* components/dynamic/index.wxss */
.dynamic {
  display: flex;
  height: 220rpx;
  width: 100%;
  /* background-color: #f00; */
  align-items: center;
  /* height: 450rpx; */
}

.image {
  /* 防止图片等比例缩小 */
  flex-shrink: 0; 
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.detail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
  margin-left: 20rpx;
}

.content {
  line-height: 55rpx;
  color: #070707;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bottom {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #afafaf;
}

.right-icon {
  display: flex;
  justify-content: space-between;
  width: 250rpx;
}

.icon-num {
  display: flex;
  flex: 1;
  align-items: center;
}

.icon {
  width: 16px;
  height: 16px;
}

.comment-icon {
  margin-right: 3px;
  background: no-repeat url(data:image/png;base64,);
}

.star-icon {
  background: no-repeat url(data:image/png;base64,);
}

