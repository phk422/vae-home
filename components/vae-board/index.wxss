/* components/vae-board/index.wxss */
.vae-board {
  display: flex;
  padding: 0 20rpx;
  height: 300rpx;
  border-radius: 20rpx;
  box-shadow: -8px 9px 6px 1px #edeef0;
  background-color: #f2f5fe;
  align-items: center;
}

.left {
  position: relative;
  width: 240rpx;
  height: 240rpx;
}

.left .img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 15rpx;
}

.left .icon-num {
  position: absolute;
  bottom: 2rpx;
  right: 2rpx;
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 10rpx;
  background-color: rgba(32, 37, 40, .6);
  font-size: 34rpx;
  text-align: center;
  color:#fff;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 0.951;
  margin-left: 30rpx;
  height: 240rpx;
}

.right .avatar {
  width: 58rpx;
  height: 58rpx;
  border-radius: 10rpx;
}

.right .info {
  display: flex;
  align-items: center;
}

.right .info .vae-name {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #888b90;
}

.right .content {
  font-size: 28rpx;
}

.right .time {
  font-size: 24rpx;
  text-align: right;
  color: #888b90;
}
