/* components/tabbar/index.wxss */
.tabbar {
  display: flex;
}

.active.item {
  color: #3a5de7;
}

.item {
  position: relative;
  color: #a0a4a9;
  width: 140rpx;
  height: 90rpx;
  text-align: center;
}

.active.item .line {
  position: relative;
  left: 53rpx;
  margin-top: 10rpx;
  width: 34rpx;
  height: 4rpx;
  background-color: #3a5de7;
}

.item .dot {
  position: absolute;
  top: 0;
  right: 16px;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #f00;
}
