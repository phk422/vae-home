/* pages/circle/square/cpns/hot-topic/index.wxss */
.hot {
  background-color: #fff;
}

.hot .title{
  padding: 20rpx 40rpx;
}

.hot .swiper {
  padding: 0 0 20rpx 40rpx;
  height: 200rpx;
}

.hot .swiper .swiper-item {
  display: flex;
  justify-content: space-between;
}

.hot .swiper .topic {
  padding-top: 20rpx;
  color: #6f7174;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 150rpx;
  width: 620rpx;
}

.hot .swiper .topic .jh {
  color: #3f61e8;
}

.hot .swiper .topic .tail {
  position: relative;
  bottom: 4rpx;
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 6rpx;
  color: #fff;
  background-color: #3f61e8;
  font-size: 16rpx;
  text-align: center;
  margin-left: 4rpx;
}
