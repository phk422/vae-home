/* pages/profile/cpns/user-info/index.wxss */
.user-info {
  position: relative;
  height: 480rpx;
  background: linear-gradient(#d6dffc, #ffffff);
}

.content {
  position: absolute;
  width: 100%;
}

.header {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  height: 120rpx;
}

.header .info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 90%;
  flex: 1;
  margin-left: 20rpx;
}

.header .info .nickname{
  font-weight: 700;
}

.header .info .msg {
  color: #a4a4a5;
  font-size: 26rpx;
}

.header .info .msg text:nth-child(2) {
  padding-left: 32rpx;
}

.header .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.go-in {
  font-size: 28rpx;
  color: #6c74c6;
}

.footer {
  display: flex;
  margin-top: 20rpx;
}

.footer .item {
  text-align: center;
  flex: 1;
}

.footer .item view:nth-child(1) {
  color: #a4a4a5;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.footer .item view:nth-child(2) {
  font-size: 38rpx;
  font-weight: 700;
}

.lv {
  position: absolute;
  bottom: 0;
  height: 50rpx;
  width: 100%;
  border-bottom: 8rpx solid #425cde;
}


.lv .grade {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100rpx;
  height: 44rpx;
  line-height: 44rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  background-color: #425cde;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
}
